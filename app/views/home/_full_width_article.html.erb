<%= link_to article_path(article) do %>
  <article class="image-article main">
    <div class="image-article-image" style="background-image: url('<%= article.image %>')"></div>
    <h2 class="image-article-title"><%= article.title %></h2>
    <h4 class="image-article-description"><%= limit_text(article.text) %></h4>
  </article>
<% end %>
